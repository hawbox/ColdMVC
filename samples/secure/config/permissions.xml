<roles>
	<role name="Admin">
		<permissions>
			<permission controller="*" action="*" access="edit" />
		</permissions>
	</role>
	<role name="Basic">
		<permissions>
			<permission controller="*" action="*" access="view" />
		</permissions>
	</role>
	<role name="Guest">
		<permissions>
			<permission controller="(widget|gadget)" action="*" access="none" />
			<permission controller="*" action="*" access="view" />
		</permissions>
	</role>
</roles>